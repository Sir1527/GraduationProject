<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.BloodPressureMapper">
    <sql id="Base_Column_List">
        BPid,userId,sbp,dbp,createTime
    </sql>

    <insert id="insert" parameterType="com.example.entity.BloodPressure" useGeneratedKeys="true" keyProperty="BPid">
        insert into bloodpressure
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="BPid != null">BPid,</if>
            <if test="userId != null">userId,</if>
            <if test="sbp != null">sbp,</if>
            <if test="dbp != null">dbp,</if>
            <if test="createTime != null">createTime,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="BPid != null">#{BPid},</if>
            <if test="userId != null">#{userId},</if>
            <if test="sbp != null">#{sbp},</if>
            <if test="dbp != null">#{dbp},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <select id="selectAll" resultType="com.example.entity.BloodPressure">
        select
        <include refid="Base_Column_List" />
        from bloodPressure
        <where>
            <if test="userId != null"> and userId = #{userId}</if>
        </where>
        order by createTime desc
    </select>
</mapper>
