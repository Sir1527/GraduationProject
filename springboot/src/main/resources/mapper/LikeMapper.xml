<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.LikeMapper">

    <insert id="insert" parameterType="com.example.entity.Likes" useGeneratedKeys="true" keyProperty="like_id">
        insert into likes
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="like_id != null">like_id,</if>
            <if test="user_id != null">user_id,</if>
            <if test="news_id != null">news_id,</if>
            <if test="post_id != null">post_id,</if>
            <if test="comment_id != null">comment_id,</if>
            <if test="create_time != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="like_id != null">#{like_id},</if>
            <if test="user_id != null">#{user_id},</if>
            <if test="news_id != null">#{news_id},</if>
            <if test="post_id != null">#{post_id},</if>
            <if test="comment_id != null">#{comment_id},</if>
            <if test="create_time != null">#{create_time},</if>
        </trim>
    </insert>

</mapper>
