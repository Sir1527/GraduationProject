<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.WeightMapper">
    <sql id="Base_Column_List">
        weightId,userId,weight,BMI,createTime
    </sql>

    <insert id="insert" parameterType="com.example.entity.Weight" useGeneratedKeys="true" keyProperty="weightId">
        insert into weight
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="weightId != null">weightId,</if>
            <if test="userId != null">userId,</if>
            <if test="weight != null">weight,</if>
            <if test="BMI != null">BMI,</if>
            <if test="createTime != null">createTime,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="weightId != null">#{weightId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="weight != null">#{weight},</if>
            <if test="BMI != null">#{BMI},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <select id="selectAll" resultType="com.example.entity.Weight">
        select
        <include refid="Base_Column_List" />
        from weight
        <where>
            <if test="userId != null"> and userId = #{userId}</if>
        </where>
        order by createTime desc
    </select>
</mapper>